<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_goneMarginEnd="1dp"
    android:layout_marginStart="@dimen/margin_start"
    android:layout_marginEnd="@dimen/margin_start"
    android:background="@drawable/linearlayout_custom_border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tvTime_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:19"
            android:textColor="@color/colorText_card"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTitle_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Title"
            android:textColor="@color/colorText_card"
            android:textDirection="ltr" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="-10dp"
        android:gravity="end"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/start"
            android:layout_gravity="end"
            android:layout_marginEnd="13dp"

            />
        <ImageView
            android:id="@+id/ivColor_atodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_blur_circular_black_24dp"
            android:layout_marginEnd="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-5dp"
        >
        <TextView
            android:id="@+id/tvPMorAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_card"
            android:text = "PM"/>
        <TextView
            android:id="@+id/tvCategory_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText_card"
            android:text="Family"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="45dp"
            />
    </LinearLayout>

</LinearLayout>